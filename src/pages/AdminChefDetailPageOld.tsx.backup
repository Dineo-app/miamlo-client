import React, { useEffect, useState } from 'react';
import { useParams, useNavigate } from 'react-router-dom';
import { useSelector, useDispatch } from 'react-redux';
import type { RootState } from '@/store';
import { fetchChefDetail, createPlateForChef, type CreatePlateRequest } from '@/store/actions/adminActions';
import {
  UserCircleIcon,
  EnvelopeIcon,
  PhoneIcon,
  MapPinIcon,
  CheckCircleIcon,
  XCircleIcon,
  PlusIcon,
  ClockIcon,
  CurrencyEuroIcon,
} from '@heroicons/react/24/outline';

const AdminChefDetailPage: React.FC = () => {
  const { chefId } = useParams<{ chefId: string }>();
  const navigate = useNavigate();
  const dispatch = useDispatch();
  const { selectedChef, chefDetailLoading, chefDetailError, createPlateLoading } = useSelector(
    (state: RootState) => state.admin
  );

  const [showCreatePlateModal, setShowCreatePlateModal] = useState(false);
  const [plateForm, setPlateForm] = useState<CreatePlateRequest>({
    name: '',
    description: '',
    estimatedCookTime: 30,
    price: 0,
    categories: [],
    imageUrl: '',
    available: true,
  });

  useEffect(() => {
    if (chefId) {
      (dispatch as any)(fetchChefDetail(chefId));
    }
  }, [chefId, dispatch]);

  const handleCreatePlate = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!chefId) return;

    try {
      await (dispatch as any)(createPlateForChef(chefId, plateForm));
      setShowCreatePlateModal(false);
      setPlateForm({
        name: '',
        description: '',
        estimatedCookTime: 30,
        price: 0,
        categories: [],
        imageUrl: '',
        available: true,
      });
    } catch (error) {
      console.error('Failed to create plate:', error);
    }
  };

  const handleRetry = () => {
    if (chefId) {
      (dispatch as any)(fetchChefDetail(chefId));
    }
  };

  // Skeleton loader
  const DetailSkeleton = () => (
    <div className="animate-pulse space-y-6">
      <div className="h-8 bg-gray-200 rounded w-1/3"></div>
      <div className="grid grid-cols-2 gap-4">
        <div className="h-4 bg-gray-200 rounded"></div>
        <div className="h-4 bg-gray-200 rounded"></div>
        <div className="h-4 bg-gray-200 rounded"></div>
        <div className="h-4 bg-gray-200 rounded"></div>
      </div>
    </div>
  );

  return (
    <div className="min-h-screen bg-gray-50 py-8">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {/* Header */}
        <div className="mb-8">
          <button
            onClick={() => navigate('/admin/chefs')}
            className="mb-4 text-purple-600 hover:text-purple-700 flex items-center gap-2"
          >
            ← Retour à la liste des chefs
          </button>
          <h1 className="text-3xl font-bold text-gray-900">Détails du Chef</h1>
        </div>

        {/* Error state */}
        {chefDetailError && (
          <div className="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
            <div className="flex items-center justify-between">
              <div className="flex items-center gap-3">
                <XCircleIcon className="h-6 w-6 text-red-600" />
                <p className="text-red-800">{chefDetailError}</p>
              </div>
              <button
                onClick={handleRetry}
                className="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700"
              >
                Réessayer
              </button>
            </div>
          </div>
        )}

        {/* Loading state */}
        {chefDetailLoading && (
          <div className="bg-white rounded-lg shadow p-6">
            <DetailSkeleton />
          </div>
        )}

        {/* Chef details */}
        {!chefDetailLoading && !chefDetailError && selectedChef && (
          <div className="space-y-6">
            {/* Profile section */}
            <div className="bg-white rounded-lg shadow p-6">
              <div className="flex items-start justify-between mb-6">
                <div className="flex items-center gap-4">
                  <div className="h-20 w-20 bg-purple-100 rounded-full flex items-center justify-center">
                    <UserCircleIcon className="h-12 w-12 text-purple-600" />
                  </div>
                  <div>
                    <h2 className="text-2xl font-bold text-gray-900">
                      {selectedChef.firstName} {selectedChef.lastName}
                    </h2>
                    {selectedChef.isVerified ? (
                      <span className="inline-flex items-center gap-1 px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800 mt-2">
                        <CheckCircleIcon className="h-4 w-4" />
                        Vérifié
                      </span>
                    ) : (
                      <span className="inline-flex items-center gap-1 px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800 mt-2">
                        <XCircleIcon className="h-4 w-4" />
                        Non vérifié
                      </span>
                    )}
                  </div>
                </div>
              </div>

              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div className="flex items-center gap-3 text-gray-700">
                  <EnvelopeIcon className="h-5 w-5 text-gray-400" />
                  <span>{selectedChef.email}</span>
                </div>
                <div className="flex items-center gap-3 text-gray-700">
                  <PhoneIcon className="h-5 w-5 text-gray-400" />
                  <span>{selectedChef.phone}</span>
                </div>
                <div className="flex items-center gap-3 text-gray-700 col-span-2">
                  <MapPinIcon className="h-5 w-5 text-gray-400" />
                  <span>{selectedChef.address || 'Adresse non renseignée'}</span>
                </div>
              </div>
            </div>

            {/* Stats cards */}
            <div className="grid grid-cols-1 md:grid-cols-4 gap-4">
              <div className="bg-white rounded-lg shadow p-4">
                <div className="text-sm text-gray-600">Total Plats</div>
                <div className="text-2xl font-bold text-purple-600">{selectedChef.plates.length}</div>
              </div>
              <div className="bg-white rounded-lg shadow p-4">
                <div className="text-sm text-gray-600">Total Commandes</div>
                <div className="text-2xl font-bold text-blue-600">{selectedChef.totalOrders}</div>
              </div>
              <div className="bg-white rounded-lg shadow p-4">
                <div className="text-sm text-gray-600">Commandes Actives</div>
                <div className="text-2xl font-bold text-green-600">{selectedChef.activeOrders}</div>
              </div>
              <div className="bg-white rounded-lg shadow p-4">
                <div className="text-sm text-gray-600">Commandes Complétées</div>
                <div className="text-2xl font-bold text-gray-600">{selectedChef.completedOrders}</div>
              </div>
            </div>

            {/* Plates section */}
            <div className="bg-white rounded-lg shadow p-6">
              <div className="flex items-center justify-between mb-6">
                <h3 className="text-xl font-bold text-gray-900">Plats du Chef</h3>
                <button
                  onClick={() => setShowCreatePlateModal(true)}
                  className="flex items-center gap-2 px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700"
                >
                  <PlusIcon className="h-5 w-5" />
                  Créer un Plat
                </button>
              </div>

              {selectedChef.plates.length === 0 ? (
                <div className="text-center py-12 text-gray-500">
                  <p>Aucun plat créé pour ce chef</p>
                </div>
              ) : (
                <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                  {selectedChef.plates.map((plate) => (
                    <div
                      key={plate.id}
                      className="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow"
                    >
                      {plate.imageUrl && (
                        <img
                          src={plate.imageUrl}
                          alt={plate.name}
                          className="w-full h-40 object-cover rounded-lg mb-3"
                        />
                      )}
                      <h4 className="font-semibold text-gray-900 mb-2">{plate.name}</h4>
                      <p className="text-sm text-gray-600 mb-3 line-clamp-2">{plate.description}</p>
                      <div className="flex items-center justify-between text-sm">
                        <div className="flex items-center gap-1 text-gray-600">
                          <ClockIcon className="h-4 w-4" />
                          {plate.estimatedCookTime} min
                        </div>
                        <div className="flex items-center gap-1 font-semibold text-purple-600">
                          <CurrencyEuroIcon className="h-4 w-4" />
                          {plate.price}
                        </div>
                      </div>
                      <div className="mt-2">
                        {plate.available ? (
                          <span className="text-xs px-2 py-1 bg-green-100 text-green-800 rounded-full">
                            Disponible
                          </span>
                        ) : (
                          <span className="text-xs px-2 py-1 bg-gray-100 text-gray-800 rounded-full">
                            Indisponible
                          </span>
                        )}
                      </div>
                    </div>
                  ))}
                </div>
              )}
            </div>
          </div>
        )}

        {/* Create Plate Modal */}
        {showCreatePlateModal && (
          <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
            <div className="bg-white rounded-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto p-6">
              <h2 className="text-2xl font-bold text-gray-900 mb-6">Créer un Nouveau Plat</h2>
              <form onSubmit={handleCreatePlate} className="space-y-4">
                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    Nom du plat *
                  </label>
                  <input
                    type="text"
                    required
                    value={plateForm.name}
                    onChange={(e) => setPlateForm({ ...plateForm, name: e.target.value })}
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                  />
                </div>

                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    Description *
                  </label>
                  <textarea
                    required
                    rows={4}
                    value={plateForm.description}
                    onChange={(e) => setPlateForm({ ...plateForm, description: e.target.value })}
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                  />
                </div>

                <div className="grid grid-cols-2 gap-4">
                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-1">
                      Temps de préparation (min) *
                    </label>
                    <input
                      type="number"
                      required
                      min="1"
                      value={plateForm.estimatedCookTime}
                      onChange={(e) =>
                        setPlateForm({ ...plateForm, estimatedCookTime: parseInt(e.target.value) })
                      }
                      className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                    />
                  </div>

                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-1">Prix (€) *</label>
                    <input
                      type="number"
                      required
                      min="0"
                      step="0.01"
                      value={plateForm.price}
                      onChange={(e) => setPlateForm({ ...plateForm, price: parseFloat(e.target.value) })}
                      className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                    />
                  </div>
                </div>

                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    URL de l'image
                  </label>
                  <input
                    type="url"
                    value={plateForm.imageUrl}
                    onChange={(e) => setPlateForm({ ...plateForm, imageUrl: e.target.value })}
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                  />
                </div>

                <div>
                  <label className="block text-sm font-medium text-gray-700 mb-1">
                    Catégories (séparées par des virgules)
                  </label>
                  <input
                    type="text"
                    placeholder="Végétarien, Bio, Sans gluten"
                    onChange={(e) =>
                      setPlateForm({
                        ...plateForm,
                        categories: e.target.value.split(',').map((c) => c.trim()).filter(Boolean),
                      })
                    }
                    className="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500"
                  />
                </div>

                <div className="flex items-center gap-2">
                  <input
                    type="checkbox"
                    id="available"
                    checked={plateForm.available}
                    onChange={(e) => setPlateForm({ ...plateForm, available: e.target.checked })}
                    className="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded"
                  />
                  <label htmlFor="available" className="text-sm text-gray-700">
                    Disponible immédiatement
                  </label>
                </div>

                <div className="flex gap-3 pt-4">
                  <button
                    type="button"
                    onClick={() => setShowCreatePlateModal(false)}
                    className="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50"
                  >
                    Annuler
                  </button>
                  <button
                    type="submit"
                    disabled={createPlateLoading}
                    className="flex-1 px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 disabled:opacity-50 disabled:cursor-not-allowed"
                  >
                    {createPlateLoading ? 'Création...' : 'Créer le Plat'}
                  </button>
                </div>
              </form>
            </div>
          </div>
        )}
      </div>
    </div>
  );
};

export default AdminChefDetailPage;
